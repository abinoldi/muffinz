-- [[ ------------------------------------------------------- ]]
-- [[  FISH IT MONITOR: INVENTORY BASED (TAS) + SAVER         ]]
-- [[  LOGIC: Menghitung TOTAL dari ISI TAS (Replion)         ]]
-- [[ ------------------------------------------------------- ]]

task.spawn(function()
    task.wait(10) -- Tunggu script utama load

    local Players = game:GetService("Players")
    local ReplicatedStorage = game:GetService("ReplicatedStorage")
    local CoreGui = game:GetService("CoreGui")
    local RunService = game:GetService("RunService")
    local HttpService = game:GetService("HttpService")
    local StarterGui = game:GetService("StarterGui")
    local LocalPlayer = Players.LocalPlayer

    -- === CONFIG WEBHOOK ===
    local WEBHOOK_URL_BASE = "http://43.134.116.2:5000/webhook/fishit"
    
    -- === VARIABLES ===
    local Stats = { 
        Session = 0,    -- Dihitung dari Notifikasi (Aktifitas saat ini)
        Secret = 0,     -- Dihitung dari TAS (Real Inventory)
        Ruby = 0        -- Dihitung dari TAS (Real Inventory)
    }
    local FPS_Cap_Active = false
    local Render_Active = true

    -- === SETUP MODULES & REMOTE ===
    local function GetRemote(path, name)
        local current = ReplicatedStorage
        for _, child in ipairs(path) do
            current = current:WaitForChild(child, 2)
            if not current then return nil end
        end
        return current:FindFirstChild(name)
    end

    local RPath = {"Packages", "_Index", "sleitnick_net@0.2.0", "net"}
    local RE_NewFish = GetRemote(RPath, "RE/ObtainedNewFishNotification")

    local ItemUtility, Replion, TierUtility
    pcall(function()
        ItemUtility = require(ReplicatedStorage.Shared.ItemUtility)
        TierUtility = require(ReplicatedStorage.Shared.TierUtility)
        Replion = require(ReplicatedStorage.Packages.Replion).Client
    end)

    -- === UI CREATION ===
    if CoreGui:FindFirstChild("FishItStandaloneUI") then
        CoreGui.FishItStandaloneUI:Destroy()
    end

    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "FishItStandaloneUI"
    ScreenGui.Parent = CoreGui
    ScreenGui.IgnoreGuiInset = true
    ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

    local MainFrame = Instance.new("Frame")
    MainFrame.Name = "MainFrame"
    MainFrame.Size = UDim2.new(0, 240, 0, 160)
    MainFrame.Position = UDim2.new(0.5, -120, 0.05, 0)
    MainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    MainFrame.BorderSizePixel = 0
    MainFrame.Active = true
    MainFrame.Draggable = true
    MainFrame.Parent = ScreenGui

    local UICorner = Instance.new("UICorner")
    UICorner.CornerRadius = UDim.new(0, 8)
    UICorner.Parent = MainFrame

    local Title = Instance.new("TextLabel")
    Title.Size = UDim2.new(1, 0, 0.15, 0)
    Title.BackgroundTransparency = 1
    Title.Text = "Inventory Monitor (Tas)"
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.Font = Enum.Font.GothamBold
    Title.TextSize = 13
    Title.Parent = MainFrame

    -- Labels
    local function CreateLabel(text, order, color)
        local lbl = Instance.new("TextLabel")
        lbl.Size = UDim2.new(0.9, 0, 0.12, 0)
        lbl.Position = UDim2.new(0.05, 0, 0.15 + (order * 0.13), 0)
        lbl.BackgroundTransparency = 1
        lbl.Text = text
        lbl.TextColor3 = color
        lbl.Font = Enum.Font.GothamSemibold
        lbl.TextSize = 12
        lbl.TextXAlignment = Enum.TextXAlignment.Left
        lbl.Parent = MainFrame
        return lbl
    end

    local LblSession = CreateLabel("Session Catch: 0", 0, Color3.fromRGB(200, 200, 200))
    local LblSecret = CreateLabel("Total Secret (Tas): 0", 1, Color3.fromRGB(255, 215, 0))
    local LblRuby = CreateLabel("Total Ruby Gems (Tas): 0", 2, Color3.fromRGB(255, 80, 80))
    local LblLast = CreateLabel("Last: -", 3, Color3.fromRGB(150, 150, 150))

    -- Buttons
    local function CreateBtn(text, pos, color)
        local btn = Instance.new("TextButton")
        btn.Size = UDim2.new(0.42, 0, 0.18, 0)
        btn.Position = pos
        btn.BackgroundColor3 = color
        btn.Text = text
        btn.TextColor3 = Color3.fromRGB(255, 255, 255)
        btn.Font = Enum.Font.GothamBold
        btn.TextSize = 11
        btn.Parent = MainFrame
        local c = Instance.new("UICorner"); c.CornerRadius = UDim.new(0, 6); c.Parent = btn
        return btn
    end

    local BtnFPS = CreateBtn("FPS Saver: OFF", UDim2.new(0.05, 0, 0.75, 0), Color3.fromRGB(60, 60, 60))
    local BtnRender = CreateBtn("3D Render: ON", UDim2.new(0.53, 0, 0.75, 0), Color3.fromRGB(0, 170, 0))

    -- === BUTTON LOGIC ===
    BtnFPS.MouseButton1Click:Connect(function()
        FPS_Cap_Active = not FPS_Cap_Active
        if setfpscap then setfpscap(FPS_Cap_Active and 20 or 30) end
        BtnFPS.Text = FPS_Cap_Active and "FPS Saver: ON" or "FPS Saver: OFF"
        BtnFPS.BackgroundColor3 = FPS_Cap_Active and Color3.fromRGB(0, 170, 0) or Color3.fromRGB(60, 60, 60)
    end)

    BtnRender.MouseButton1Click:Connect(function()
        Render_Active = not Render_Active
        RunService:Set3dRenderingEnabled(Render_Active)
        BtnRender.Text = Render_Active and "3D Render: ON" or "3D Render: OFF"
        BtnRender.BackgroundColor3 = Render_Active and Color3.fromRGB(0, 170, 0) or Color3.fromRGB(170, 0, 0)
    end)
    
    ScreenGui.Destroying:Connect(function()
        RunService:Set3dRenderingEnabled(true)
        if setfpscap then setfpscap(30) end
    end)

    -- === HELPER FUNCTIONS (Sama seperti script original) ===
    local function GetDetails(item)
        local name = item.Identifier or "Unknown"
        local rarity = item.Metadata and item.Metadata.Rarity or "COMMON"
        local mutation = "None"
        
        -- Ambil Nama via ItemUtility
        if ItemUtility and item.Id then
            pcall(function()
                local d = ItemUtility:GetItemData(item.Id)
                if d and d.Data then name = d.Data.Name end
            end)
        end
        
        -- Ambil Rarity via TierUtility jika Metadata kosong
        if (not item.Metadata or not item.Metadata.Rarity) and ItemUtility and TierUtility and item.Id then
             pcall(function()
                local d = ItemUtility:GetItemData(item.Id)
                if d and d.Probability then
                    local tier = TierUtility:GetTierFromRarity(d.Probability.Chance)
                    if tier and tier.Name then rarity = tier.Name end
                end
             end)
        end

        -- Ambil Mutation
        if item.Metadata then
            if item.Metadata.VariantId and item.Metadata.VariantId ~= "" then mutation = item.Metadata.VariantId
            elseif item.Metadata.Shiny then mutation = "Shiny" end
        end
        
        return name, rarity, mutation
    end

    -- === 1. SESSION CATCH LISTENER (Hanya untuk Visual "Last Caught") ===
    if RE_NewFish then
        RE_NewFish.OnClientEvent:Connect(function(itemId, metadata, fullData)
            Stats.Session = Stats.Session + 1
            LblSession.Text = "Session Catch: " .. Stats.Session
            
            local dummy = {Id = itemId, Metadata = metadata, Identifier = fullData and fullData.Identifier}
            local name, rarity, mutation = GetDetails(dummy)
            
            local show = name
            if mutation ~= "None" then show = "["..mutation.."] "..name end
            if metadata.Weight then show = show .. string.format(" (%.1fkg)", metadata.Weight) end
            LblLast.Text = "Last: " .. show
            
            -- Kita TIDAK menambah Secret/Ruby disini, karena akan dihitung ulang oleh Loop Inventory di bawah.
        end)
    end

    -- === 2. INVENTORY LOOP (LOGIKA UTAMA DARI SCRIPT ORIGINAL) ===
    task.spawn(function()
        if not Replion then 
            WindUI:Notify({Title="Error", Content="Replion Module Not Found!", Duration=5})
            return 
        end

        local dataReplica = Replion:WaitReplion("Data")
        local WebhookTimer = 0
        local WEBHOOK_INTERVAL = 15
        local GUI_SCAN_INTERVAL = 2 -- Scan GUI lebih cepat dari Webhook (2 detik)

        while true do
            -- Ambil Data Inventory Terbaru (Persis seperti script original)
            local success, inventory = pcall(function() return dataReplica:GetExpect("Inventory") end)

            if success and inventory then
                local sCount = 0
                local rCount = 0
                local summary = {} -- Untuk Webhook

                for _, items in pairs(inventory) do
                    for _, item in ipairs(items) do
                        local name, rarity, mutation = GetDetails(item)
                        
                        -- LOGIKA DETEKSI (Case Insensitive)
                        local isSecret = (rarity and rarity:upper() == "SECRET")
                        local isRubyGem = (name == "Ruby" and mutation == "Gemstone")

                        -- 1. Hitung Total untuk GUI
                        if isSecret then sCount = sCount + 1 end
                        if isRubyGem then rCount = rCount + 1 end

                        -- 2. Siapkan Data untuk Webhook
                        if isSecret or isRubyGem then
                            local displayName = name
                            if isRubyGem then 
                                displayName = "[Gemstone] Ruby"
                            elseif mutation ~= "None" then 
                                displayName = "[" .. mutation .. "] " .. name 
                            end
                            summary[displayName] = (summary[displayName] or 0) + 1
                        end
                    end
                end

                -- UPDATE GUI (Real Data dari Tas)
                Stats.Secret = sCount
                Stats.Ruby = rCount
                LblSecret.Text = "Total Secret (Tas): " .. Stats.Secret
                LblRuby.Text = "Total Ruby Gems (Tas): " .. Stats.Ruby

                -- KIRIM WEBHOOK (Setiap 15 detik)
                if os.clock() - WebhookTimer > WEBHOOK_INTERVAL then
                    local json = HttpService:JSONEncode(summary)
                    local encoded = HttpService:UrlEncode(json)
                    local url = WEBHOOK_URL_BASE .. "?player=" .. HttpService:UrlEncode(LocalPlayer.Name) .. "&data=" .. encoded
                    
                    pcall(function() game:HttpGet(url) end)
                    WebhookTimer = os.clock()
                end
            end

            task.wait(GUI_SCAN_INTERVAL) -- Loop Scan Tas
        end
    end)

    StarterGui:SetCore("SendNotification", {Title="Inventory Monitor", Text="Reading data from Bag...", Duration=5})
end)
