#!/system/bin/sh

# ==========================================================
# ROBLOX CLONE MANAGER v2.6 (STABLE & CLEAN)
# ==========================================================

# Konfigurasi Lokasi
BACKUP_DIR="/sdcard/RobloxBackups"
DOWNLOAD_DIR="/sdcard/Download/RobloxAPKs"
BASE_URL="http://146.190.147.43:88"

# Fungsi cek Root
check_root() {
    if [ "$(id -u)" -ne 0 ]; then
        echo "‚ùå Script ini MEMBUTUHKAN akses Root!"
        echo "Silakan jalankan dengan: su -c 'sh $0'"
        exit 1
    fi
}

# Fungsi 1: Backup Akun
do_backup() {
    echo "=========================================="
    echo "       MEMULAI PROSES BACKUP...           "
    echo "=========================================="
    mkdir -p "$BACKUP_DIR"
    count=0
    
    for folder in /data/data/com.roblox.clien*; do
        [ -e "$folder" ] || continue
        pkg_name=$(basename "$folder")
        
        # Deteksi lokasi cookie (Default vs Root WebView)
        cookie_path=""
        if [ -f "$folder/app_webview/Default/Cookies" ]; then
            cookie_path="$folder/app_webview/Default/Cookies"
        elif [ -f "$folder/app_webview/Cookies" ]; then
            cookie_path="$folder/app_webview/Cookies"
        fi

        if [ -n "$cookie_path" ]; then
            cp "$cookie_path" "$BACKUP_DIR/${pkg_name}.db"
            echo "‚úÖ Backup SUKSES: $pkg_name"
            count=$((count + 1))
        else
            echo "‚ö†Ô∏è  SKIP: $pkg_name (File Cookies tidak ditemukan)"
        fi
    done
    echo "------------------------------------------"
    echo "Selesai! $count database tersimpan."
}

# Fungsi 2: Restore Akun (Dengan Pengecekan Direktori)
do_restore() {
    echo "=========================================="
    echo "       MEMULAI PROSES RESTORE...          "
    echo "=========================================="
    if [ ! -d "$BACKUP_DIR" ]; then
        echo "‚ùå Folder backup tidak ditemukan!"
        return 1
    fi

    count=0
    for db_file in "$BACKUP_DIR"/com.roblox.clien*.db; do
        [ -e "$db_file" ] || continue
        pkg_name=$(basename "$db_file" .db)
        target_folder="/data/data/$pkg_name"

        # Cek apakah aplikasi sudah terinstall
        if [ -d "$target_folder" ]; then
            target_dir_parent="$target_folder/app_webview/Default"
            target_path="$target_dir_parent/Cookies"

            # Buat folder jika belum ada (biasanya pada instalasi baru)
            mkdir -p "$target_dir_parent"
            
            # Copy database backup
            cp "$db_file" "$target_path"
            
            # PERBAIKAN IZIN AKSES (PENTING agar game tidak logout/crash)
            app_uid=$(stat -c "%u:%g" "$target_folder")
            chown -R "$app_uid" "$target_folder/app_webview"
            chmod 660 "$target_path"
            
            echo "‚úÖ Restore SUKSES: $pkg_name"
            count=$((count + 1))
        else
            echo "‚ùå GAGAL: $pkg_name belum terinstall (Folder data tidak ada)."
        fi
    done
    echo "------------------------------------------"
    echo "Selesai! $count akun berhasil dipulihkan."
}

# Fungsi 3: Hapus Semua Aplikasi Clone
do_uninstall() {
    echo "=========================================="
    echo "       MENGHAPUS APLIKASI CLONE...        "
    echo "=========================================="
    pkgs=$(pm list packages | grep "com.roblox.clien" | cut -f 2 -d ":")

    if [ -z "$pkgs" ]; then
        echo "‚ùå Tidak ada aplikasi Roblox Clone yang terinstall."
        return
    fi

    echo -n "‚ùì Yakin hapus SEMUA aplikasi clone? (y/n): "
    read confirm

    if [ "$confirm" = "y" ] || [ "$confirm" = "Y" ]; then
        for pkg in $pkgs; do
            echo "‚è≥ Menghapus $pkg..."
            pm uninstall "$pkg" > /dev/null 2>&1
            [ $? -eq 0 ] && echo "   ‚úÖ Terhapus." || echo "   ‚ùå Gagal."
        done
        echo "‚ú® Pembersihan selesai!"
    else
        echo "üö´ Operasi dibatalkan."
    fi
}

# Fungsi 4: AUTO PROCESS (Download -> Install -> Restore)
do_auto_process() {
    echo "=========================================="
    echo "       PROSES OTOMATIS BERJALAN           "
    echo "=========================================="

    if [ ! -d "$BACKUP_DIR" ]; then
        echo "‚ùå Backup tidak ditemukan! Lakukan backup dulu."
        return
    fi

    total_backup=$(ls "$BACKUP_DIR"/com.roblox.clien*.db 2>/dev/null | wc -l)
    if [ "$total_backup" -eq 0 ]; then
        echo "‚ùå Tidak ada data akun di $BACKUP_DIR."
        return
    fi

    echo "üì¶ Menyiapkan $total_backup akun untuk dipasang..."
    mkdir -p "$DOWNLOAD_DIR"

    for i in $(seq 1 "$total_backup"); do
        echo "------------------------------------------"
        APK_NAME="$i.apk"
        SAVE_PATH="$DOWNLOAD_DIR/$APK_NAME"

        # 1. Download menggunakan CURL dengan Bar Progres
        if [ ! -f "$SAVE_PATH" ]; then
            echo "üì• Mengunduh $APK_NAME [$i/$total_backup]"
            curl -L --progress-bar "$BASE_URL/$APK_NAME" -o "$SAVE_PATH"
        else
            echo "‚úÖ $APK_NAME sudah tersedia."
        fi

        # 2. Install Silent
        if [ -f "$SAVE_PATH" ]; then
            echo "‚è≥ Memasang $APK_NAME..."
            pm install -r "$SAVE_PATH" > /dev/null 2>&1
            
            # JEDA PENTING: Memberi waktu sistem membuat folder /data/data/
            echo "‚è≥ Sinkronisasi sistem (tunggu 3 detik)..."
            sleep 3
        fi
    done

    # 3. Jalankan Restore Masal
    do_restore
    echo "‚ú® SEMUA PROSES OTOMATIS SELESAI!"
}

# --- MAIN MENU ---
check_root

while true; do
    echo ""
    echo "=========================================="
    echo "    ROBLOX CLONE MANAGER v2.6 (ROOT)      "
    echo "=========================================="
    echo "1. Backup Akun"
    echo "2. Restore Akun (Manual)"
    echo "3. Hapus Semua Aplikasi Clone"
    echo "4. PROSES OTOMATIS (Sangat Disarankan)"
    echo "5. Keluar"
    echo "------------------------------------------"
    echo -n "Pilih menu [1-5]: "
    read choice

    case $choice in
        1) do_backup ;;
        2) do_restore ;;
        3) do_uninstall ;;
        4) do_auto_process ;;
        5) echo "Keluar."; exit 0 ;;
        *) echo "‚ö†Ô∏è Pilihan salah." ;;
    esac
done
