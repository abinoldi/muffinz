#!/system/bin/sh

# ==========================================================
# ROBLOX CLONE MANAGER v2.7 (SMART RESTORE BY INSTALLED PKG)
# ==========================================================

# Konfigurasi Lokasi
BACKUP_DIR="/sdcard/RobloxBackups"
DOWNLOAD_DIR="/sdcard/Download/RobloxAPKs"
BASE_URL="http://146.190.147.43:88"

# Fungsi cek Root
check_root() {
    if [ "$(id -u)" -ne 0 ]; then
        echo "‚ùå Script ini MEMBUTUHKAN akses Root!"
        echo "Silakan jalankan dengan: su -c 'sh $0'"
        exit 1
    fi
}

# Fungsi 1: Backup Akun
do_backup() {
    echo "=========================================="
    echo "       MEMULAI PROSES BACKUP...           "
    echo "=========================================="
    mkdir -p "$BACKUP_DIR"
    count=0
    
    for folder in /data/data/com.roblox.clien*; do
        [ -e "$folder" ] || continue
        pkg_name=$(basename "$folder")
        
        cookie_path=""
        if [ -f "$folder/app_webview/Default/Cookies" ]; then
            cookie_path="$folder/app_webview/Default/Cookies"
        elif [ -f "$folder/app_webview/Cookies" ]; then
            cookie_path="$folder/app_webview/Cookies"
        fi

        if [ -n "$cookie_path" ]; then
            cp "$cookie_path" "$BACKUP_DIR/${pkg_name}.db"
            echo "‚úÖ Backup SUKSES: $pkg_name"
            count=$((count + 1))
        else
            echo "‚ö†Ô∏è  SKIP: $pkg_name (Cookies tidak ditemukan)"
        fi
    done
    echo "------------------------------------------"
    echo "Selesai! $count database tersimpan."
}

# Fungsi 2: Restore Berdasarkan Aplikasi Terinstall (SMART MODE)
do_restore() {
    echo "=========================================="
    echo "    RESTORE BERDASARKAN APP TERINSTALL    "
    echo "=========================================="
    
    # Ambil list package yang terinstall di sistem
    installed_pkgs=$(pm list packages | grep "com.roblox.clien" | cut -f 2 -d ":")

    if [ -z "$installed_pkgs" ]; then
        echo "‚ùå Tidak ada aplikasi Roblox Clone yang terinstall."
        return 1
    fi

    count=0
    for pkg in $installed_pkgs; do
        db_file="$BACKUP_DIR/${pkg}.db"
        target_folder="/data/data/$pkg"

        # Cek apakah file backup untuk paket ini ada
        if [ -f "$db_file" ]; then
            target_dir_parent="$target_folder/app_webview/Default"
            target_path="$target_dir_parent/Cookies"

            mkdir -p "$target_dir_parent"
            cp "$db_file" "$target_path"
            
            # Fix Ownership & Permissions
            app_uid=$(stat -c "%u:%g" "$target_folder")
            chown -R "$app_uid" "$target_folder/app_webview"
            chmod 660 "$target_path"
            
            echo "‚úÖ $pkg: Berhasil dipulihkan."
            count=$((count + 1))
        else
            echo "‚ö†Ô∏è  $pkg: Terinstall tapi file backup (${pkg}.db) tidak ada."
        fi
    done
    echo "------------------------------------------"
    echo "Selesai! $count akun berhasil dipasangkan."
}

# Fungsi 3: Hapus Semua Aplikasi Clone
do_uninstall() {
    echo "=========================================="
    echo "       MENGHAPUS APLIKASI CLONE...        "
    echo "=========================================="
    pkgs=$(pm list packages | grep "com.roblox.clien" | cut -f 2 -d ":")

    if [ -z "$pkgs" ]; then
        echo "‚ùå Tidak ada aplikasi Roblox Clone yang terinstall."
        return
    fi

    echo -n "‚ùì Yakin hapus SEMUA aplikasi clone? (y/n): "
    read confirm

    if [ "$confirm" = "y" ] || [ "$confirm" = "Y" ]; then
        for pkg in $pkgs; do
            echo "‚è≥ Menghapus $pkg..."
            pm uninstall "$pkg" > /dev/null 2>&1
            [ $? -eq 0 ] && echo "   ‚úÖ Terhapus." || echo "   ‚ùå Gagal."
        done
    fi
}

# Fungsi 4: AUTO PROCESS
do_auto_process() {
    echo "=========================================="
    echo "       PROSES OTOMATIS BERJALAN           "
    echo "=========================================="

    total_backup=$(ls "$BACKUP_DIR"/com.roblox.clien*.db 2>/dev/null | wc -l)
    if [ "$total_backup" -eq 0 ]; then
        echo "‚ùå Tidak ada data backup di $BACKUP_DIR."
        return
    fi

    echo "üì¶ Ditemukan $total_backup backup. Menyiapkan instalasi..."
    mkdir -p "$DOWNLOAD_DIR"

    for i in $(seq 1 "$total_backup"); do
        echo "------------------------------------------"
        APK_NAME="$i.apk"
        SAVE_PATH="$DOWNLOAD_DIR/$APK_NAME"

        if [ ! -f "$SAVE_PATH" ]; then
            echo "üì• Mengunduh $APK_NAME..."
            curl -L --progress-bar "$BASE_URL/$APK_NAME" -o "$SAVE_PATH"
        fi

        if [ -f "$SAVE_PATH" ]; then
            echo "‚è≥ Memasang $APK_NAME..."
            pm install -r "$SAVE_PATH" > /dev/null 2>&1
            echo "‚è≥ Sinkronisasi sistem (3 detik)..."
            sleep 3
        fi
    done

    # Jalankan restore yang menyesuaikan dengan apa yang baru saja terinstall
    do_restore
    echo "‚ú® SEMUA PROSES OTOMATIS SELESAI!"
}

# --- MAIN MENU ---
check_root

while true; do
    echo ""
    echo "=========================================="
    echo "    ROBLOX CLONE MANAGER v2.7 (ROOT)      "
    echo "=========================================="
    echo "1. Backup Akun"
    echo "2. Restore Akun (Ikuti App Terinstall)"
    echo "3. Hapus Semua Aplikasi Clone"
    echo "4. PROSES OTOMATIS (Download+Install+Restore)"
    echo "5. Keluar"
    echo "------------------------------------------"
    echo -n "Pilih menu [1-5]: "
    read choice

    case $choice in
        1) do_backup ;;
        2) do_restore ;;
        3) do_uninstall ;;
        4) do_auto_process ;;
        5) exit 0 ;;
        *) echo "‚ö†Ô∏è Pilihan salah." ;;
    esac
done
