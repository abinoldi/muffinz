#!/system/bin/sh

# ==========================================================
# ROBLOX CLONE MANAGER v3.4 (ANTI-STUCK + BATCHING)
# ==========================================================

BACKUP_DIR="/sdcard/RobloxBackups"
DOWNLOAD_DIR="/sdcard/Download/RobloxAPKs"
BASE_URL="http://43.134.116.2:5555/uploaded"

# KONFIGURASI PENTING
MAX_PARALLEL=5       # Cuma boleh download 5 file barengan
TIMEOUT_SEC=180      # Maksimal 3 menit per file (kalau macet, kill)

check_root() {
    if [ "$(id -u)" -ne 0 ]; then
        echo "‚ùå Script ini MEMBUTUHKAN akses Root!"
        exit 1
    fi
}

do_backup() {
    echo "=========================================="
    echo "       MEMULAI PROSES BACKUP...           "
    echo "=========================================="
    mkdir -p "$BACKUP_DIR"
    count=0
    for folder in /data/data/com.roblox.clien*; do
        [ -e "$folder" ] || continue
        pkg_name=$(basename "$folder")
        
        cookie_file=""
        [ -f "$folder/app_webview/Default/Cookies" ] && cookie_file="$folder/app_webview/Default/Cookies"
        [ -f "$folder/app_webview/Cookies" ] && cookie_file="$folder/app_webview/Cookies"

        if [ -n "$cookie_file" ]; then
             cp "$cookie_file" "$BACKUP_DIR/${pkg_name}.db"
             count=$((count + 1))
        fi
    done
    echo "‚úÖ Backup Selesai! $count akun tersimpan."
}

do_restore_sequential() {
    echo ""
    echo "=========================================="
    echo "    RESTORE BERDASARKAN URUTAN (SEQ)      "
    echo "=========================================="
    backups=($(ls "$BACKUP_DIR"/com.roblox.clien*.db 2>/dev/null))
    pkgs=($(pm list packages | grep "com.roblox.clien" | cut -f 2 -d ":"))

    total_backups=${#backups[@]}
    if [ "$total_backups" -eq 0 ]; then echo "‚ùå Tidak ada backup."; return 1; fi

    i=0
    while [ $i -lt $total_backups ] && [ $i -lt ${#pkgs[@]} ]; do
        current_db="${backups[$i]}"
        current_pkg="${pkgs[$i]}"
        target_dir="/data/data/$current_pkg/app_webview/Default"
        
        echo "üîÑ Restore: $current_pkg"
        mkdir -p "$target_dir"
        cp "$current_db" "$target_dir/Cookies"
        
        uid=$(stat -c "%u" "/data/data/$current_pkg")
        chown -R "$uid:$uid" "/data/data/$current_pkg/app_webview"
        chmod 660 "$target_dir/Cookies"
        
        i=$((i + 1))
    done
    echo "‚úÖ Restore Selesai."
}

do_uninstall() {
    echo "üóëÔ∏è Menghapus aplikasi..."
    for pkg in $(pm list packages | grep "com.roblox.clien" | cut -f 2 -d ":"); do
        pm uninstall "$pkg" > /dev/null 2>&1
    done
    echo "‚úÖ Bersih."
}

do_auto_process() {
    echo "=========================================="
    echo "   üöÄ PROSES OTOMATIS (ANTI-STUCK) üöÄ     "
    echo "=========================================="
    
    total_files=$(ls "$BACKUP_DIR"/com.roblox.clien*.db 2>/dev/null | wc -l)
    if [ "$total_files" -eq 0 ]; then echo "‚ùå Tidak ada backup."; return; fi

    rm -rf "$DOWNLOAD_DIR"
    mkdir -p "$DOWNLOAD_DIR"

    echo "üì° Mendownload $total_files file..."
    echo "‚ö†Ô∏è  Mode: Batch (Max $MAX_PARALLEL download bersamaan)"
    echo "‚ö†Ô∏è  Timeout: ${TIMEOUT_SEC} detik (Anti-Macet)"
    echo "------------------------------------------"

    # --- LOGIKA BATCHING DOWNLOAD ---
    counter=0
    for i in $(seq 1 "$total_files"); do
        APK_NAME="$i.apk"
        SAVE_PATH="$DOWNLOAD_DIR/$APK_NAME"
        
        # Perintah CURL yang dimodifikasi agar TIDAK MACET
        # -m $TIMEOUT_SEC : Mati paksa kalau lebih dari 3 menit
        # --retry 3 : Coba ulang 3x kalau gagal
        # --connect-timeout 10 : Kalau 10 detik server gak nyaut, skip.
        
        (curl -L -s --retry 3 --retry-delay 2 --connect-timeout 10 -m $TIMEOUT_SEC "$BASE_URL/$APK_NAME" -o "$SAVE_PATH" && echo "   ‚úÖ OK: $APK_NAME") &
        
        # Hitung proses yang berjalan
        counter=$((counter + 1))
        
        # Jika sisa bagi counter dengan MAX_PARALLEL adalah 0 (misal 5, 10, 15)
        # Maka script akan PAUSE (wait) sampai 5 file itu selesai dulu.
        if [ $((counter % MAX_PARALLEL)) -eq 0 ]; then
            echo "   ‚è≥ Menunggu batch selesai..."
            wait
            echo "   üöÄ Lanjut batch berikutnya..."
        fi
    done

    # Tunggu sisa file (misal total 12, sisa 2 terakhir)
    wait
    echo "‚úÖ Semua proses download selesai/berhenti."
    echo "------------------------------------------"

    # --- VALIDASI & INSTALL ---
    echo "üì¶ Menginstall Aplikasi Valid..."
    installed_count=0
    for i in $(seq 1 "$total_files"); do
        APK_NAME="$i.apk"
        SAVE_PATH="$DOWNLOAD_DIR/$APK_NAME"
        
        # Cek apakah file berhasil didownload dan ukurannya wajar (>1KB)
        if [ -f "$SAVE_PATH" ] && [ $(stat -c%s "$SAVE_PATH") -gt 1024 ]; then
            echo "   üíø Install: $APK_NAME"
            pm install -r "$SAVE_PATH" > /dev/null 2>&1
            installed_count=$((installed_count + 1))
        else
            echo "   ‚ùå Gagal/Corrupt: $APK_NAME (Dilewati)"
        fi
    done

    do_restore_sequential
    echo "‚ú® SELESAI! ($installed_count berhasil diinstall)"
}

# --- MAIN MENU ---
check_root
while true; do
    echo ""
    echo "=========================================="
    echo "    ROBLOX MANAGER v3.4 (STABLE)          "
    echo "=========================================="
    echo "1. Backup Akun"
    echo "2. Restore Akun"
    echo "3. Hapus Semua Aplikasi"
    echo "4. MULAI DOWNLOAD & INSTALL (ANTI-LAG)"
    echo "5. Keluar"
    echo -n "Pilih: "
    read choice
    case $choice in
        1) do_backup ;;
        2) do_restore_sequential ;;
        3) do_uninstall ;;
        4) do_auto_process ;;
        5) exit 0 ;;
        *) echo "‚ö†Ô∏è Salah." ;;
    esac
done
