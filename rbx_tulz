#!/system/bin/sh

# Konfigurasi
BACKUP_DIR="/sdcard/RobloxBackups"
DOWNLOAD_DIR="/data/data/com.termux/files/home/rbx_apks"
SERVER_URL="http://146.190.147.43:88"
SCRIPT_DIR="/data/data/com.termux/files/home"
LOG_FILE="/sdcard/RobloxAuto.log"

# Fungsi log
log_msg() {
    echo "$(date '+%Y-%m-%d %H:%M:%S') - $1" >> "$LOG_FILE"
    echo "$1"
}

# Cek root
check_root() {
    if [ "$(id -u)" != "0" ]; then
        echo "Butuh root! Jalankan: su -c 'sh $0'"
        exit 1
    fi
}

# Set PATH
export PATH=/data/data/com.termux/files/usr/bin:$PATH

# Hitung cookies
count_cookies() {
    local db="$1"
    if [ ! -f "$db" ]; then
        echo "0"
        return
    fi
    if command -v sqlite3 >/dev/null 2>&1; then
        sqlite3 "$db" "SELECT COUNT(*) FROM cookies;" 2>/dev/null || echo "0"
    else
        echo "0"
    fi
}

# Hitung backup files
count_backups() {
    if [ ! -d "$BACKUP_DIR" ]; then
        echo "0"
        return
    fi
    ls "$BACKUP_DIR"/*.db 2>/dev/null | wc -l
}

# 1. Hitung app terinstall
count_apps() {
    log_msg "Hitung app terinstall"
    
    local pkgs=$(pm list packages | grep "com.roblox.clien" | cut -d: -f2)
    local count=0
    
    if [ -n "$pkgs" ]; then
        count=$(echo "$pkgs" | wc -l)
    fi
    
    log_msg "App ditemukan: $count"
    echo "$count"
}

# 2. Backup cookies
backup_cookies() {
    log_msg "Backup cookies"
    
    mkdir -p "$BACKUP_DIR"
    local backup_count=0
    
    for folder in /data/data/com.roblox.clien*; do
        if [ ! -d "$folder" ]; then
            continue
        fi
        
        local pkg_name=$(basename "$folder")
        local cookie_path=""
        
        if [ -f "$folder/app_webview/Default/Cookies" ]; then
            cookie_path="$folder/app_webview/Default/Cookies"
        elif [ -f "$folder/app_webview/Cookies" ]; then
            cookie_path="$folder/app_webview/Cookies"
        fi
        
        if [ -n "$cookie_path" ]; then
            local backup_file="$BACKUP_DIR/${pkg_name}.db"
            cp "$cookie_path" "$backup_file"
            backup_count=$((backup_count + 1))
            log_msg "Backup: $pkg_name"
        fi
    done
    
    log_msg "Backup selesai: $backup_count app"
    echo "$backup_count"
}

# 3. Uninstall semua
uninstall_apps() {
    log_msg "Uninstall apps"
    
    local pkgs=$(pm list packages | grep "com.roblox.clien" | cut -d: -f2)
    local uninstalled=0
    
    if [ -z "$pkgs" ]; then
        log_msg "Tidak ada app untuk diuninstall"
        echo "0"
        return
    fi
    
    for pkg in $pkgs; do
        log_msg "Uninstall: $pkg"
        if pm uninstall "$pkg" >/dev/null 2>&1; then
            uninstalled=$((uninstalled + 1))
        fi
    done
    
    log_msg "Uninstall selesai: $uninstalled app"
    echo "$uninstalled"
}

# 4. Download APK
download_apk() {
    local count="$1"
    log_msg "Download $count APK"
    
    # Validasi
    if [ -z "$count" ]; then
        log_msg "Error: Jumlah kosong"
        return 1
    fi
    
    if [ "$count" -lt 1 ] || [ "$count" -gt 8 ]; then
        log_msg "Error: Jumlah harus 1-8"
        return 1
    fi
    
    # Buat folder
    mkdir -p "$DOWNLOAD_DIR"
    cd "$DOWNLOAD_DIR" || return 1
    
    # Hapus lama
    rm -f *.apk 2>/dev/null
    
    local downloaded=0
    
    # Download loop
    i=1
    while [ "$i" -le "$count" ]; do
        local apk_file="$i.apk"
        local url="$SERVER_URL/$apk_file"
        
        echo "Download: $apk_file"
        log_msg "Download: $apk_file"
        
        # Coba wget
        if command -v wget >/dev/null 2>&1; then
            if wget --timeout=30 --tries=2 --quiet "$url" -O "$apk_file" 2>/dev/null; then
                if [ -f "$apk_file" ] && [ -s "$apk_file" ]; then
                    downloaded=$((downloaded + 1))
                    log_msg "Berhasil: $apk_file"
                fi
            fi
        # Coba curl
        elif command -v curl >/dev/null 2>&1; then
            if curl -L --connect-timeout 30 --max-time 60 --retry 2 --silent "$url" -o "$apk_file" 2>/dev/null; then
                if [ -f "$apk_file" ] && [ -s "$apk_file" ]; then
                    downloaded=$((downloaded + 1))
                    log_msg "Berhasil: $apk_file"
                fi
            fi
        else
            log_msg "Error: wget/curl tidak ada"
            return 1
        fi
        
        i=$((i + 1))
        sleep 1
    done
    
    log_msg "Download selesai: $downloaded berhasil"
    
    if [ "$downloaded" -eq 0 ]; then
        log_msg "Error: Tidak ada file didownload"
        return 1
    fi
    
    return 0
}

# 5. Install APK
install_apk() {
    local count="$1"
    log_msg "Install $count APK"
    
    # Validasi
    if [ -z "$count" ]; then
        log_msg "Error: Jumlah kosong"
        return 1
    fi
    
    if [ ! -d "$DOWNLOAD_DIR" ]; then
        log_msg "Error: Folder download tidak ada"
        return 1
    fi
    
    cd "$DOWNLOAD_DIR" || return 1
    
    local installed=0
    
    # Install loop
    i=1
    while [ "$i" -le "$count" ]; do
        local apk_file="$i.apk"
        
        if [ ! -f "$apk_file" ]; then
            log_msg "File tidak ada: $apk_file"
            i=$((i + 1))
            continue
        fi
        
        # Nama package
        local pkg_name="com.roblox.clien$i"
        if [ "$i" -eq 1 ]; then
            pkg_name="com.roblox.client"
        fi
        
        echo "Install: $apk_file"
        log_msg "Install: $pkg_name"
        
        # Install
        if pm install "$apk_file" >/dev/null 2>&1; then
            installed=$((installed + 1))
            log_msg "Berhasil: $pkg_name"
        else
            log_msg "Gagal: $apk_file"
        fi
        
        i=$((i + 1))
        sleep 1
    done
    
    log_msg "Install selesai: $installed berhasil"
    echo "$installed"
}

# 6. Restore cookies
restore_cookies() {
    log_msg "Restore cookies"
    
    if [ ! -d "$BACKUP_DIR" ]; then
        log_msg "Error: Folder backup tidak ada"
        return 1
    fi
    
    local restored=0
    
    for db_file in "$BACKUP_DIR"/com.roblox.clien*.db; do
        if [ ! -f "$db_file" ]; then
            continue
        fi
        
        local pkg_name=$(basename "$db_file" .db)
        local target_folder="/data/data/$pkg_name"
        local target_path="$target_folder/app_webview/Default/Cookies"
        
        if [ -d "$target_folder" ]; then
            mkdir -p "$(dirname "$target_path")"
            
            # Restore
            cp "$db_file" "$target_path"
            
            # Set permission
            if app_uid=$(stat -c "%u:%g" "$target_folder" 2>/dev/null); then
                chown "$app_uid" "$target_path"
                chmod 660 "$target_path"
                restored=$((restored + 1))
                log_msg "Restore: $pkg_name"
            fi
        fi
    done
    
    log_msg "Restore selesai: $restored app"
    echo "$restored"
}

# Tentukan jumlah app
get_app_count() {
    local installed=$(count_apps)
    local backup=$(count_backups)
    
    log_msg "App terinstall: $installed"
    log_msg "File backup: $backup"
    
    if [ "$installed" -gt 0 ]; then
        log_msg "Gunakan app terinstall: $installed"
        echo "$installed"
        return
    fi
    
    if [ "$backup" -gt 0 ]; then
        log_msg "Gunakan jumlah backup: $backup"
        echo "$backup"
        return
    fi
    
    log_msg "Gunakan default: 1"
    echo "1"
}

# Proses utama
auto_process() {
    echo "Mulai proses otomatis"
    echo "Log: $LOG_FILE"
    echo ""
    
    # Reset log
    echo "START" > "$LOG_FILE"
    log_msg "Start proses"
    
    # 1. Tentukan jumlah
    log_msg "Step 1: Tentukan jumlah"
    APP_COUNT=$(get_app_count)
    log_msg "Jumlah app: $APP_COUNT"
    echo "Jumlah app: $APP_COUNT"
    echo ""
    
    # 2. Backup
    log_msg "Step 2: Backup"
    echo "Backup cookies..."
    BACKUP_RESULT=$(backup_cookies)
    echo "Backup: $BACKUP_RESULT"
    
    if [ "$BACKUP_RESULT" -gt 0 ]; then
        APP_COUNT="$BACKUP_RESULT"
        log_msg "Update jumlah: $APP_COUNT"
    fi
    echo ""
    
    # 3. Uninstall
    log_msg "Step 3: Uninstall"
    echo "Uninstall apps..."
    UNINSTALL_RESULT=$(uninstall_apps)
    echo "Uninstall: $UNINSTALL_RESULT"
    echo ""
    
    # 4. Download
    log_msg "Step 4: Download"
    echo "Download $APP_COUNT APK..."
    if ! download_apk "$APP_COUNT"; then
        echo "Gagal download"
        return 1
    fi
    echo ""
    
    # 5. Install
    log_msg "Step 5: Install"
    echo "Install APK..."
    INSTALL_RESULT=$(install_apk "$APP_COUNT")
    echo "Install: $INSTALL_RESULT"
    echo ""
    
    # 6. Restore
    log_msg "Step 6: Restore"
    echo "Restore cookies..."
    RESTORE_RESULT=$(restore_cookies)
    echo "Restore: $RESTORE_RESULT"
    echo ""
    
    # Hasil
    echo "Selesai"
    log_msg "Selesai"
    
    echo "Hasil:"
    echo "  App: $APP_COUNT"
    echo "  Backup: $BACKUP_RESULT"
    echo "  Uninstall: $UNINSTALL_RESULT"
    echo "  Install: $INSTALL_RESULT"
    echo "  Restore: $RESTORE_RESULT"
    echo ""
    echo "Backup: $BACKUP_DIR"
    echo "Download: $DOWNLOAD_DIR"
    echo "Log: $LOG_FILE"
}

# Menu manual
manual_menu() {
    while true; do
        echo ""
        echo "1. Download & Install"
        echo "2. Backup Cookies"
        echo "3. Restore Cookies"
        echo "4. Hapus Semua"
        echo "5. Kembali"
        echo "6. Keluar"
        read -p "Pilih: " choice
        
        case $choice in
            1)
                read -p "Jumlah (1-8): " count
                if [ "$count" -ge 1 ] && [ "$count" -le 8 ]; then
                    download_apk "$count"
                    install_apk "$count"
                else
                    echo "Harus 1-8"
                fi
                ;;
            2) backup_cookies ;;
            3) restore_cookies ;;
            4) uninstall_apps ;;
            5) return ;;
            6) exit 0 ;;
            *) echo "Pilihan salah" ;;
        esac
    done
}

# Main
check_root

echo "Roblox Manager"
echo "Server: $SERVER_URL"
echo ""

APPS_NOW=$(pm list packages | grep "com.roblox.clien" | wc -l)
echo "App terinstall: $APPS_NOW"

BACKUP_NOW=$(count_backups)
if [ "$BACKUP_NOW" -gt 0 ]; then
    echo "Backup ada: $BACKUP_NOW file"
fi

while true; do
    echo ""
    echo "Mode:"
    echo "1. Otomatis"
    echo "2. Manual"
    echo "3. Keluar"
    read -p "Pilih: " mode
    
    case $mode in
        1)
            echo ""
            echo "Proses otomatis akan:"
            echo "1. Cek app/backup"
            echo "2. Backup cookies"
            echo "3. Uninstall"
            echo "4. Download APK"
            echo "5. Install"
            echo "6. Restore"
            echo ""
            read -p "Lanjut? (y/n): " confirm
            if [ "$confirm" = "y" ] || [ "$confirm" = "Y" ]; then
                auto_process
            else
                echo "Batal"
            fi
            ;;
        2) manual_menu ;;
        3)
            echo "Selesai"
            exit 0
            ;;
        *)
            echo "Pilihan salah"
            ;;
    esac
done
