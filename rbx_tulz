#!/system/bin/sh

# Konfigurasi
BACKUP_DIR="/sdcard/RobloxBackups"
DOWNLOAD_DIR="/data/data/com.termux/files/home/rbx_apks"
SERVER_URL="http://146.190.147.43:88"
SCRIPT_DIR="/data/data/com.termux/files/home"
LOG_FILE="/sdcard/RobloxAuto.log"

# Fungsi log
log_message() {
    local msg="$1"
    echo "$(date '+%Y-%m-%d %H:%M:%S') - $msg" >> "$LOG_FILE"
    echo "$msg"
}

# Cek root
check_root() {
    if [ "$(id -u)" != "0" ]; then
        echo "‚ùå Butuh root! Jalankan: su -c 'sh $0'"
        exit 1
    fi
}

# Set PATH
export PATH=/data/data/com.termux/files/usr/bin:$PATH

# Hitung cookies
count_cookies_in_db() {
    local db_file="$1"
    if [ ! -f "$db_file" ]; then
        echo "0"
        return
    fi
    if command -v sqlite3 >/dev/null 2>&1; then
        sqlite3 "$db_file" "SELECT COUNT(*) FROM cookies;" 2>/dev/null || echo "0"
    else
        echo "0"
    fi
}

# Hitung backup files
count_backup_files() {
    if [ ! -d "$BACKUP_DIR" ]; then
        echo "0"
        return
    fi
    ls "$BACKUP_DIR"/*.db 2>/dev/null | wc -l
}

# 1. Hitung app terinstall
count_installed_apps() {
    echo "=========================================="
    echo "   STEP 1: HITUNG APP"
    echo "=========================================="
    
    local pkgs=$(pm list packages | grep "com.roblox.clien" | cut -d: -f2)
    local count=0
    
    if [ -n "$pkgs" ]; then
        count=$(echo "$pkgs" | wc -l)
    fi
    
    log_message "App terinstall: $count"
    
    if [ "$count" -gt 0 ]; then
        local i=1
        for pkg in $pkgs; do
            log_message "   $i. $pkg"
            i=$((i + 1))
        done
    else
        log_message "Tidak ada app Roblox"
    fi
    
    echo "$count"
}

# 2. Backup cookies
backup_all_cookies() {
    echo "=========================================="
    echo "   STEP 2: BACKUP COOKIES"
    echo "=========================================="
    
    mkdir -p "$BACKUP_DIR"
    local backup_count=0
    local cookie_count_total=0
    
    log_message "Backup cookies..."
    
    for folder in /data/data/com.roblox.clien*; do
        if [ ! -d "$folder" ]; then
            continue
        fi
        
        local pkg_name=$(basename "$folder")
        local cookie_path=""
        
        # Cari file cookies
        if [ -f "$folder/app_webview/Default/Cookies" ]; then
            cookie_path="$folder/app_webview/Default/Cookies"
        elif [ -f "$folder/app_webview/Cookies" ]; then
            cookie_path="$folder/app_webview/Cookies"
        fi
        
        if [ -n "$cookie_path" ]; then
            local backup_file="$BACKUP_DIR/${pkg_name}.db"
            cp "$cookie_path" "$backup_file"
            
            local cookies=$(count_cookies_in_db "$backup_file")
            cookie_count_total=$((cookie_count_total + cookies))
            
            log_message "‚úì $pkg_name: $cookies cookies"
            backup_count=$((backup_count + 1))
        else
            log_message "‚úó $pkg_name: tidak ada cookies"
        fi
    done
    
    if [ "$backup_count" -eq 0 ]; then
        log_message "Tidak ada cookies dibackup"
        echo "0"
        return
    fi
    
    log_message "Backup selesai: $backup_count app, $cookie_count_total cookies"
    echo "$backup_count"
}

# 3. Uninstall semua
uninstall_all_apps() {
    echo "=========================================="
    echo "   STEP 3: UNINSTALL"
    echo "=========================================="
    
    local pkgs=$(pm list packages | grep "com.roblox.clien" | cut -d: -f2)
    local total=0
    local uninstalled=0
    
    if [ -n "$pkgs" ]; then
        total=$(echo "$pkgs" | wc -l)
    fi
    
    if [ "$total" -eq 0 ]; then
        log_message "Tidak ada app untuk diuninstall"
        echo "0"
        return
    fi
    
    log_message "Uninstall $total app..."
    
    for pkg in $pkgs; do
        log_message "   Uninstall: $pkg"
        if pm uninstall "$pkg" >/dev/null 2>&1; then
            log_message "   ‚úì Berhasil"
            uninstalled=$((uninstalled + 1))
        else
            log_message "   ‚úó Gagal"
        fi
    done
    
    log_message "Uninstall selesai: $uninstalled/$total"
    echo "$uninstalled"
}

# 4. Download APK - FIXED VERSION
download_apk_from_server() {
    local app_count=$1
    echo "=========================================="
    echo "   STEP 4: DOWNLOAD APK"
    echo "=========================================="
    
    # Validasi
    if [ -z "$app_count" ]; then
        log_message "ERROR: Jumlah app kosong"
        return 1
    fi
    
    # Pastikan angka
    if ! echo "$app_count" | grep -q '^[0-9]\+$'; then
        log_message "ERROR: Bukan angka: $app_count"
        return 1
    fi
    
    if [ "$app_count" -lt 1 ] || [ "$app_count" -gt 8 ]; then
        log_message "ERROR: Harus 1-8: $app_count"
        return 1
    fi
    
    # Buat folder
    mkdir -p "$DOWNLOAD_DIR"
    cd "$DOWNLOAD_DIR" || {
        log_message "ERROR: Gagal masuk folder"
        return 1
    }
    
    # Hapus lama
    rm -f *.apk 2>/dev/null
    
    log_message "Download $app_count APK dari $SERVER_URL"
    
    local downloaded=0
    local failed=0
    
    # Loop download
    i=1
    while [ "$i" -le "$app_count" ]; do
        local apk_file="$i.apk"
        local url="$SERVER_URL/$apk_file"
        
        echo ""
        echo "‚¨áÔ∏è  [$i/$app_count] $apk_file"
        log_message "Download: $apk_file"
        
        # Coba download
        local success=false
        
        # Coba wget dulu
        if command -v wget >/dev/null 2>&1; then
            echo "   Menggunakan wget..."
            if wget --timeout=30 --tries=2 --quiet "$url" -O "$apk_file" 2>/dev/null; then
                success=true
            fi
        # Coba curl
        elif command -v curl >/dev/null 2>&1; then
            echo "   Menggunakan curl..."
            if curl -L --connect-timeout 30 --max-time 60 --retry 2 --silent "$url" -o "$apk_file" 2>/dev/null; then
                success=true
            fi
        else
            log_message "ERROR: wget/curl tidak ada"
            return 1
        fi
        
        # Cek hasil
        if [ "$success" = true ] && [ -f "$apk_file" ] && [ -s "$apk_file" ]; then
            local size=$(ls -lh "$apk_file" 2>/dev/null | awk '{print $5}' || echo "?")
            log_message "‚úì Berhasil: $apk_file ($size)"
            downloaded=$((downloaded + 1))
        else
            log_message "‚úó Gagal: $apk_file"
            rm -f "$apk_file" 2>/dev/null
            failed=$((failed + 1))
        fi
        
        i=$((i + 1))
        sleep 1
    done
    
    echo ""
    log_message "Download selesai: $downloaded berhasil, $failed gagal"
    
    # Tampilkan file
    echo ""
    echo "üìã File yang didownload:"
    if ls *.apk >/dev/null 2>&1; then
        ls -lh *.apk
    else
        echo "   Tidak ada file"
    fi
    
    if [ "$downloaded" -eq 0 ]; then
        log_message "ERROR: Tidak ada file berhasil"
        return 1
    fi
    
    return 0
}

# 5. Install APK
install_all_downloaded_apps() {
    local app_count=$1
    echo "=========================================="
    echo "   STEP 5: INSTALL APK"
    echo "=========================================="
    
    # Validasi
    if [ -z "$app_count" ]; then
        log_message "ERROR: Jumlah app kosong"
        return 1
    fi
    
    if ! echo "$app_count" | grep -q '^[0-9]\+$'; then
        log_message "ERROR: Bukan angka: $app_count"
        return 1
    fi
    
    if [ ! -d "$DOWNLOAD_DIR" ]; then
        log_message "ERROR: Folder download tidak ada"
        return 1
    fi
    
    cd "$DOWNLOAD_DIR" || {
        log_message "ERROR: Gagal masuk folder"
        return 1
    }
    
    log_message "Install $app_count app..."
    
    local installed=0
    local failed=0
    
    # Loop install
    i=1
    while [ "$i" -le "$app_count" ]; do
        local apk_file="$i.apk"
        
        if [ ! -f "$apk_file" ]; then
            log_message "‚úó File tidak ada: $apk_file"
            failed=$((failed + 1))
            i=$((i + 1))
            continue
        fi
        
        # Nama package
        local pkg_name="com.roblox.clien$i"
        if [ "$i" -eq 1 ]; then
            pkg_name="com.roblox.client"
        fi
        
        echo ""
        echo "üì¶ [$i/$app_count] $apk_file"
        log_message "Install: $apk_file -> $pkg_name"
        
        # Cek sudah install
        if pm list packages | grep -q "$pkg_name" 2>/dev/null; then
            log_message "‚úì Sudah terinstall: $pkg_name"
            installed=$((installed + 1))
        else
            # Install
            if pm install "$apk_file" >/dev/null 2>&1; then
                log_message "‚úì Berhasil install: $pkg_name"
                installed=$((installed + 1))
                sleep 2
            else
                log_message "‚úó Gagal install: $apk_file"
                failed=$((failed + 1))
            fi
        fi
        
        i=$((i + 1))
    done
    
    log_message "Install selesai: $installed berhasil, $failed gagal"
    echo "$installed"
}

# 6. Restore cookies
restore_all_cookies() {
    echo "=========================================="
    echo "   STEP 6: RESTORE COOKIES"
    echo "=========================================="
    
    if [ ! -d "$BACKUP_DIR" ]; then
        log_message "ERROR: Folder backup tidak ada"
        return 1
    fi
    
    log_message "Restore cookies..."
    
    local restored=0
    local failed=0
    local total_cookies=0
    
    for db_file in "$BACKUP_DIR"/com.roblox.clien*.db; do
        if [ ! -f "$db_file" ]; then
            continue
        fi
        
        local pkg_name=$(basename "$db_file" .db)
        local target_folder="/data/data/$pkg_name"
        local target_path="$target_folder/app_webview/Default/Cookies"
        
        local cookies=$(count_cookies_in_db "$db_file")
        
        if [ -d "$target_folder" ]; then
            mkdir -p "$(dirname "$target_path")"
            
            # Restore
            cp "$db_file" "$target_path"
            
            # Set permission
            if app_uid=$(stat -c "%u:%g" "$target_folder" 2>/dev/null); then
                chown "$app_uid" "$target_path"
                chmod 660 "$target_path"
                log_message "‚úì Restore: $pkg_name ($cookies cookies)"
                restored=$((restored + 1))
                total_cookies=$((total_cookies + cookies))
            else
                log_message "‚úó Gagal permission: $pkg_name"
                failed=$((failed + 1))
            fi
        else
            log_message "‚úó App tidak ada: $pkg_name"
            failed=$((failed + 1))
        fi
    done
    
    if [ "$restored" -eq 0 ]; then
        log_message "Tidak ada cookies direstore"
        echo "0"
        return
    fi
    
    log_message "Restore selesai: $restored app, $total_cookies cookies"
    echo "$total_cookies"
}

# Tentukan jumlah app
determine_app_count() {
    echo "=========================================="
    echo "   TENTUKAN JUMLAH APP"
    echo "=========================================="
    
    local installed=$(count_installed_apps)
    local backup=$(count_backup_files)
    
    log_message "Status:"
    log_message "   App terinstall: $installed"
    log_message "   File backup: $backup"
    
    # Prioritaskan app terinstall
    if [ "$installed" -gt 0 ]; then
        log_message "Gunakan app terinstall: $installed"
        echo "$installed"
        return
    fi
    
    # Jika ada backup
    if [ "$backup" -gt 0 ]; then
        log_message "Gunakan jumlah backup: $backup"
        echo "$backup"
        return
    fi
    
    # Default
    log_message "Gunakan default: 1"
    echo "1"
}

# Proses utama
run_automated_process() {
    echo "=========================================="
    echo "   PROSES OTOMATIS"
    echo "=========================================="
    echo ""
    
    # Reset log
    echo "=== START ===" > "$LOG_FILE"
    log_message "Memulai..."
    
    # 1. Tentukan jumlah
    log_message "=== STEP 1 ==="
    APP_COUNT=$(determine_app_count)
    log_message "Jumlah app: $APP_COUNT"
    echo "üì± Jumlah app: $APP_COUNT"
    echo ""
    
    # 2. Backup
    log_message "=== STEP 2 ==="
    echo "üíæ Backup cookies..."
    BACKUP_RESULT=$(backup_all_cookies)
    echo "Cookies: $BACKUP_RESULT"
    
    # Update jumlah dari backup
    if [ "$BACKUP_RESULT" -gt 0 ]; then
        APP_COUNT="$BACKUP_RESULT"
        log_message "Update: $APP_COUNT app"
    fi
    echo ""
    
    # 3. Uninstall
    log_message "=== STEP 3 ==="
    echo "üóëÔ∏è  Uninstall..."
    UNINSTALL_RESULT=$(uninstall_all_apps)
    echo "Uninstall: $UNINSTALL_RESULT"
    echo ""
    
    # 4. Download
    log_message "=== STEP 4 ==="
    echo "‚¨áÔ∏è  Download $APP_COUNT app..."
    if ! download_apk_from_server "$APP_COUNT"; then
        echo "‚ùå Gagal download"
        return 1
    fi
    echo ""
    
    # 5. Install
    log_message "=== STEP 5 ==="
    echo "üîß Install..."
    INSTALL_RESULT=$(install_all_downloaded_apps "$APP_COUNT")
    echo "Install: $INSTALL_RESULT"
    echo ""
    
    # 6. Restore
    log_message "=== STEP 6 ==="
    echo "üîÑ Restore..."
    RESTORE_RESULT=$(restore_all_cookies)
    echo "Restore: $RESTORE_RESULT cookies"
    echo ""
    
    # Summary
    echo "=========================================="
    echo "   SELESAI"
    echo "=========================================="
    log_message "=== SELESAI ==="
    
    echo "üìä Hasil:"
    echo "   App: $APP_COUNT"
    echo "   Backup: $BACKUP_RESULT"
    echo "   Uninstall: $UNINSTALL_RESULT"
    echo "   Install: $INSTALL_RESULT"
    echo "   Restore: $RESTORE_RESULT"
    echo ""
    echo "üìÅ Backup: $BACKUP_DIR"
    echo "üìÅ Download: $DOWNLOAD_DIR"
    echo "üìã Log: $LOG_FILE"
    
    # Cek app
    echo ""
    echo "üì± App sekarang:"
    pm list packages | grep "roblox" || echo "   Tidak ada"
}

# Menu manual
manual_menu() {
    while true; do
        echo ""
        echo "1. Download & Install"
        echo "2. Backup Cookies"
        echo "3. Restore Cookies"
        echo "4. Hapus Semua"
        echo "5. Kembali"
        echo "6. Keluar"
        printf "Pilih: "
        read choice
        
        case $choice in
            1)
                echo ""
                echo "Pilih jumlah (1-8):"
                read count
                if echo "$count" | grep -q '^[1-8]$'; then
                    download_apk_from_server "$count"
                    install_all_downloaded_apps "$count"
                else
                    echo "‚ùå Harus 1-8"
                fi
                ;;
            2) backup_all_cookies ;;
            3) restore_all_cookies ;;
            4) uninstall_all_apps ;;
            5) return ;;
            6) exit 0 ;;
            *) echo "‚ùå Pilihan salah" ;;
        esac
    done
}

# --- MAIN ---
check_root

echo "=========================================="
echo "   ROBOX MANAGER"
echo "=========================================="
echo "Server: $SERVER_URL"
echo ""

# Status
APPS_NOW=$(pm list packages | grep "com.roblox.clien" | wc -l)
echo "üì± App terinstall: $APPS_NOW"

BACKUP_NOW=$(count_backup_files)
if [ "$BACKUP_NOW" -gt 0 ]; then
    echo "üíæ Backup ada: $BACKUP_NOW file"
fi

while true; do
    echo ""
    echo "MODE:"
    echo "1. Otomatis (6 step)"
    echo "2. Manual"
    echo "3. Keluar"
    printf "Pilih: "
    read mode
    
    case $mode in
        1)
            echo ""
            echo "Proses akan:"
            echo "1. Cek app/backup"
            echo "2. Backup cookies"
            echo "3. Uninstall"
            echo "4. Download APK"
            echo "5. Install"
            echo "6. Restore"
            echo ""
            echo "Lanjut? (y/n)"
            printf "Jawab: "
            read confirm
            if echo "$confirm" | grep -qi '^y'; then
                run_automated_process
            else
                echo "‚ùå Batal"
            fi
            ;;
        2) manual_menu ;;
        3)
            echo "üëã Selesai"
            exit 0
            ;;
        *)
            echo "‚ùå Pilihan salah"
            ;;
    esac
done
