#!/system/bin/sh

# ==========================================================
# ROBLOX CLONE MANAGER v6.1 (AUTO-INSTALL DEPENDENCY)
# ==========================================================

# --- KONFIGURASI ASLI ---
BACKUP_DIR="/sdcard/RobloxBackups"
DOWNLOAD_DIR="/sdcard/Download/RobloxAPKs"

# --- KONFIGURASI BARU (CLOUD) ---
GITHUB_PYTHON_URL="https://raw.githubusercontent.com/abinoldi/muffinz/main/downloader.py"
LOCAL_PYTHON_PATH="/data/data/com.termux/files/home/downloader.py"
GOFILE_URL="https://gofile.io/d/ewZLec"

# Konfigurasi Environment untuk Script Python
export GF_DOWNLOAD_DIR="$DOWNLOAD_DIR"
export GF_MAX_CONCURRENT_DOWNLOADS=5
export GF_MAX_RETRIES=5

# --- WARNA ---
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
NC='\033[0m'

check_root() {
    if [ "$(id -u)" -ne 0 ]; then
        echo "‚ùå Script ini MEMBUTUHKAN akses Root!"
        exit 1
    fi
}

# --- FUNGSI CEK & INSTALL PYTHON (REQ USER) ---
check_dependencies() {
    echo "üîç Memeriksa kelengkapan..."

    # 1. Cek apakah command 'python3' ada
    if ! command -v python3 > /dev/null 2>&1; then
        echo "${YELLOW}üì¶ Python belum terinstall. Sedang menginstall...${NC}"
        # Install Python otomatis
        pkg update -y > /dev/null 2>&1
        pkg install python -y
        echo "${GREEN}‚úÖ Python berhasil diinstall.${NC}"
    else
        echo "‚úÖ Python sudah siap."
    fi

    # 2. Cek apakah module 'requests' ada (Wajib untuk script downloader)
    if ! python3 -c "import requests" > /dev/null 2>&1; then
        echo "${YELLOW}üì¶ Modul 'requests' belum ada. Menginstall via pip...${NC}"
        pip install requests
        echo "${GREEN}‚úÖ Modul requests berhasil diinstall.${NC}"
    fi
}

setup_downloader() {
    # Download script python dari GitHub jika belum ada
    if [ ! -f "$LOCAL_PYTHON_PATH" ]; then
        echo "‚òÅÔ∏è Mengambil script downloader dari GitHub..."
        curl -L -s "$GITHUB_PYTHON_URL" -o "$LOCAL_PYTHON_PATH"
    fi
}

# --- FUNGSI ASLI (BACKUP, RESTORE, UNINSTALL) ---

do_backup() {
    echo "=========================================="
    echo "       MEMULAI PROSES BACKUP...           "
    echo "=========================================="
    mkdir -p "$BACKUP_DIR"
    count=0
    for folder in /data/data/com.roblox.clien*; do
        [ -e "$folder" ] || continue
        pkg_name=$(basename "$folder")
        cookie_path=""
        [ -f "$folder/app_webview/Default/Cookies" ] && cookie_path="$folder/app_webview/Default/Cookies"
        [ -f "$folder/app_webview/Cookies" ] && [ -z "$cookie_path" ] && cookie_path="$folder/app_webview/Cookies"

        if [ -n "$cookie_path" ]; then
            cp "$cookie_path" "$BACKUP_DIR/${pkg_name}.db"
            echo "‚úÖ Backup SUKSES: $pkg_name"
            count=$((count + 1))
        fi
    done
    echo "------------------------------------------"
    echo "Selesai! $count database tersimpan."
}

do_restore_sequential() {
    echo "=========================================="
    echo "    RESTORE BERDASARKAN URUTAN (SEQ)      "
    echo "=========================================="
    
    backups=($(ls "$BACKUP_DIR"/com.roblox.clien*.db 2>/dev/null))
    pkgs=($(pm list packages | grep "com.roblox.clien" | cut -f 2 -d ":"))

    total_backups=${#backups[@]}
    total_pkgs=${#pkgs[@]}

    if [ "$total_backups" -eq 0 ] || [ "$total_pkgs" -eq 0 ]; then
        echo "‚ùå Data backup atau aplikasi tidak ditemukan."
        return 1
    fi

    echo "‚ÑπÔ∏è Ditemukan $total_backups backup dan $total_pkgs aplikasi."
    echo "------------------------------------------"

    i=0
    while [ $i -lt $total_backups ] && [ $i -lt $total_pkgs ]; do
        current_db="${backups[$i]}"
        current_pkg="${pkgs[$i]}"
        
        target_folder="/data/data/$current_pkg"
        target_dir_parent="$target_folder/app_webview/Default"
        target_path="$target_dir_parent/Cookies"

        echo "üîÑ Merestore [$(basename "$current_db")] ke [$current_pkg]..."

        mkdir -p "$target_dir_parent"
        cp "$current_db" "$target_path"
        
        app_uid=$(stat -c "%u:%g" "$target_folder")
        chown -R "$app_uid" "$target_folder/app_webview"
        chmod 660 "$target_path"
        
        echo "‚úÖ Berhasil."
        i=$((i + 1))
    done
    echo "------------------------------------------"
    echo "Selesai! $i akun dipulihkan."
}

do_uninstall() {
    echo "=========================================="
    echo "       MENGHAPUS APLIKASI CLONE...        "
    echo "=========================================="
    pkgs=$(pm list packages | grep "com.roblox.clien" | cut -f 2 -d ":")
    [ -z "$pkgs" ] && echo "‚ùå Tidak ada aplikasi." && return
    
    echo -n "‚ùì Yakin hapus SEMUA? (y/n): "
    read confirm
    if [ "$confirm" = "y" ] || [ "$confirm" = "Y" ]; then
        for pkg in $pkgs; do
            pm uninstall "$pkg" > /dev/null 2>&1 && echo "‚úÖ $pkg Terhapus."
        done
    fi
}

# --- FUNGSI AUTO PROCESS (DENGAN CEK PYTHON) ---

do_auto_process() {
    echo "=========================================="
    echo "       PROSES OTOMATIS BERJALAN           "
    echo "=========================================="
    
    # 1. Cek Dependensi (Python & Requests) -> INSTALL JIKA BELUM ADA
    check_dependencies
    
    # 2. Siapkan Script Downloader
    setup_downloader
    
    mkdir -p "$DOWNLOAD_DIR"

    # 3. Jalankan Download via Python (Gofile)
    echo "${CYAN}üöÄ Memulai Download dari Gofile...${NC}"
    if [ -f "$LOCAL_PYTHON_PATH" ]; then
        python3 "$LOCAL_PYTHON_PATH" "$GOFILE_URL"
    else
        echo "‚ùå Gagal memuat script downloader.py!"
        return
    fi

    # 4. Proses Install APK
    echo "------------------------------------------"
    echo "‚è≥ Memindai file APK..."
    
    count_files=$(find "$DOWNLOAD_DIR" -name "*.apk" | wc -l)
    
    if [ "$count_files" -eq 0 ]; then
        echo "‚ùå Tidak ada APK yang terdownload."
        return
    fi

    find "$DOWNLOAD_DIR" -name "*.apk" | sort -V | while read apk_file; do
        echo "‚è≥ Memasang $(basename "$apk_file")..."
        pm install -r "$apk_file" > /dev/null 2>&1
        sleep 1
    done

    # 5. Restore Data
    do_restore_sequential
    echo "‚ú® SEMUA PROSES SELESAI!"
}

# --- MAIN MENU ---
check_root
while true; do
    echo ""
    echo "=========================================="
    echo "    ROBLOX CLONE MANAGER v6.1 (CLOUD)     "
    echo "=========================================="
    echo "1. Backup Akun"
    echo "2. Restore Akun (Urutan Sequential)"
    echo "3. Hapus Semua Aplikasi Clone"
    echo "4. PROSES OTOMATIS (Download+Install+Restore)"
    echo "5. Keluar"
    echo "------------------------------------------"
    echo -n "Pilih menu [1-5]: "
    read choice
  
    case $choice in
        1) do_backup ;;
        2) do_restore_sequential ;;
        3) do_uninstall ;;
        4) do_auto_process ;;
        5) exit 0 ;;
        *) echo "‚ö†Ô∏è Pilihan salah." ;;
    esac
done
