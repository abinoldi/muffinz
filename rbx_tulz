#!/system/bin/sh

# ==========================================================
# ROBLOX MANAGER v7.0 (PURE BASH - NO PYTHON)
# ==========================================================

# --- KONFIGURASI ---
BACKUP_DIR="/sdcard/RobloxBackups"
DOWNLOAD_DIR="/sdcard/Download/RobloxAPKs"
GOFILE_URL="https://gofile.io/d/ewZLec"

# --- WARNA ---
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
RED='\033[0;31m'
NC='\033[0m'

# --- FUNGSI UTAMA ---

check_root() {
    if [ "$(id -u)" -ne 0 ]; then
        echo "${RED}‚ùå Script ini MEMBUTUHKAN akses Root!${NC}"
        echo "üëâ Jalankan dengan: tsu"
        exit 1
    fi
}

get_gofile_token() {
    # Ambil token tamu
    curl -s -X POST https://api.gofile.io/accounts | grep -o '"token":"[^"]*' | cut -d'"' -f4
}

# --- FUNGSI PARSING JSON TANPA PYTHON/JQ ---
# Ini rahasianya: Kita ubah koma (,) jadi Enter (\n) biar grep bisa baca
get_download_links() {
    local content_id=$1
    local token=$2
    
    # Ambil JSON
    response=$(curl -s "https://api.gofile.io/contents/$content_id?cache=true" \
        -H "Authorization: Bearer $token" \
        -H "X-Website-Token: 4fd6sg89d7s6")

    # TEKNIK SED: Pecah baris panjang jadi baris pendek-pendek
    # Lalu cari baris yang mengandung "link":"https..."
    # Lalu bersihkan kutipnya
    echo "$response" | sed 's/,/\n/g' | grep '"link":' | grep -o 'https://[^"]*'
}

# --- FUNGSI MENU ---

do_backup() {
    echo "=========================================="
    echo "       MEMULAI PROSES BACKUP...           "
    echo "=========================================="
    mkdir -p "$BACKUP_DIR"
    count=0
    for folder in /data/data/com.roblox.clien*; do
        [ -e "$folder" ] || continue
        pkg_name=$(basename "$folder")
        
        # Cek lokasi cookie (kadang beda versi beda letak)
        cookie_path=""
        [ -f "$folder/app_webview/Default/Cookies" ] && cookie_path="$folder/app_webview/Default/Cookies"
        [ -f "$folder/app_webview/Cookies" ] && [ -z "$cookie_path" ] && cookie_path="$folder/app_webview/Cookies"

        if [ -n "$cookie_path" ]; then
            cp "$cookie_path" "$BACKUP_DIR/${pkg_name}.db"
            echo "‚úÖ Backup: $pkg_name"
            count=$((count + 1))
        fi
    done
    echo "Selesai! $count database tersimpan."
}

do_restore_sequential() {
    echo "=========================================="
    echo "    RESTORE BERDASARKAN URUTAN (SEQ)      "
    echo "=========================================="
    
    # Syntax array bash
    backups=($(ls "$BACKUP_DIR"/com.roblox.clien*.db 2>/dev/null))
    pkgs=($(pm list packages | grep "com.roblox.clien" | cut -f 2 -d ":"))

    total_backups=${#backups[@]}
    total_pkgs=${#pkgs[@]}

    if [ "$total_backups" -eq 0 ] || [ "$total_pkgs" -eq 0 ]; then
        echo "‚ùå Data backup atau aplikasi tidak ditemukan."
        return 1
    fi

    echo "‚ÑπÔ∏è Mengembalikan $total_backups akun ke $total_pkgs aplikasi."

    i=0
    while [ $i -lt $total_backups ] && [ $i -lt $total_pkgs ]; do
        current_db="${backups[$i]}"
        current_pkg="${pkgs[$i]}"
        target_path="/data/data/$current_pkg/app_webview/Default/Cookies"

        echo "üîÑ Restore: $(basename "$current_db") -> $current_pkg"
        mkdir -p "$(dirname "$target_path")"
        cp "$current_db" "$target_path"
        
        # Permission Fix
        app_uid=$(stat -c "%u:%g" "/data/data/$current_pkg")
        chown -R "$app_uid" "/data/data/$current_pkg/app_webview"
        chmod 660 "$target_path"
        
        i=$((i + 1))
    done
    echo "‚úÖ Selesai!"
}

do_uninstall() {
    echo "=== HAPUS APLIKASI ==="
    pkgs=$(pm list packages | grep "com.roblox.clien" | cut -f 2 -d ":")
    [ -z "$pkgs" ] && echo "‚ùå Tidak ada aplikasi." && return
    
    echo -n "‚ùì Yakin hapus SEMUA? (y/n): "
    read confirm
    if [ "$confirm" = "y" ] || [ "$confirm" = "Y" ]; then
        for pkg in $pkgs; do
            pm uninstall "$pkg" > /dev/null 2>&1 && echo "‚úÖ $pkg Terhapus."
        done
    fi
}

do_auto_process() {
    echo "=========================================="
    echo "    PROSES OTOMATIS (PURE BASH/NO PY)     "
    echo "=========================================="
    
    mkdir -p "$DOWNLOAD_DIR"
    
    # 1. Bersihkan folder download lama biar tidak duplikat
    rm -f "$DOWNLOAD_DIR"/*.apk

    # 2. Ambil ID Gofile dari URL
    CONTENT_ID=$(echo "$GOFILE_URL" | grep -oE '[a-zA-Z0-9]+$' | tail -n 1)
    
    echo "${CYAN}üöÄ Mengambil Token & Link Download...${NC}"
    TOKEN=$(get_gofile_token)
    
    if [ -z "$TOKEN" ]; then
        echo "${RED}‚ùå Gagal mengambil token Gofile. Cek internet.${NC}"
        return
    fi

    # 3. Ambil List URL File
    # (Menggunakan fungsi parsing sed+grep tadi)
    LINKS=$(get_download_links "$CONTENT_ID" "$TOKEN")
    
    if [ -z "$LINKS" ]; then
        echo "${RED}‚ùå Tidak ditemukan file di link tersebut.${NC}"
        return
    fi
    
    echo "‚¨áÔ∏è Mulai mendownload..."
    cd "$DOWNLOAD_DIR"
    
    # 4. Loop Download
    # curl -JLO akan otomatis mendeteksi nama file asli (1.apk, 2.apk) dari server
    for link in $LINKS; do
        echo "   ...mendownload file..."
        curl -JLO -s "$link" 
    done
    
    echo "${GREEN}‚úÖ Download Selesai.${NC}"
    echo "------------------------------------------"
    echo "‚è≥ Menginstall APK..."

    # 5. Install (Diurutkan)
    # ls -v agar urut (1, 2, 3... 10)
    for apk in $(ls -v *.apk 2>/dev/null); do
        echo "üì¶ Memasang $apk..."
        pm install -r "$apk" > /dev/null 2>&1
    done

    # 6. Restore
    do_restore_sequential
    echo "‚ú® SEMUA PROSES SELESAI!"
}

# --- MENU ---
check_root
while true; do
    echo ""
    echo "=========================================="
    echo "   ROBLOX MANAGER v7.0 (NO PYTHON)        "
    echo "=========================================="
    echo "1. Backup Akun"
    echo "2. Restore Akun"
    echo "3. Hapus Clone"
    echo "4. AUTO (Download + Install + Restore)"
    echo "5. Keluar"
    echo "------------------------------------------"
    echo -n "Pilih menu [1-5]: "
    read choice
  
    case $choice in
        1) do_backup ;;
        2) do_restore_sequential ;;
        3) do_uninstall ;;
        4) do_auto_process ;;
        5) exit 0 ;;
        *) echo "‚ö†Ô∏è Pilihan salah." ;;
    esac
done
