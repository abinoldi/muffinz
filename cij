#!/system/bin/sh

# ==========================================================
# ROBLOX MASS COOKIE INJECTOR v4.0 (MULTI-INPUT & SEQUENTIAL)
# ==========================================================

TERMUX_SQLITE="/data/data/com.termux/files/usr/bin/sqlite3"
TMP_SQLITE="/data/local/tmp/sqlite3_inject"

# 1. Cek Root
check_root() {
    if [ "$(id -u)" -ne 0 ]; then
        echo "‚ùå Script ini MEMBUTUHKAN akses Root!"
        exit 1
    fi
}

# 2. Siapkan SQLite
prepare_sqlite() {
    rm -f "$TMP_SQLITE"
    if [ -f "$TERMUX_SQLITE" ]; then
        cp "$TERMUX_SQLITE" "$TMP_SQLITE"
        chmod 755 "$TMP_SQLITE"
        SQLITE_BIN="$TMP_SQLITE"
    else
        SQLITE_BIN=$(which sqlite3)
    fi

    if [ -z "$SQLITE_BIN" ] || [ ! -x "$SQLITE_BIN" ]; then
        echo "‚ùå sqlite3 tidak ditemukan."
        exit 1
    fi
}

# 3. Fungsi Injeksi (Core Logic)
inject_core() {
    local pkg="$1"
    local cookie="$2"
    local folder="/data/data/$pkg"
    
    # Tentukan Path
    local cookie_path=""
    [ -f "$folder/app_webview/Default/Cookies" ] && cookie_path="$folder/app_webview/Default/Cookies"
    [ -f "$folder/app_webview/Cookies" ] && [ -z "$cookie_path" ] && cookie_path="$folder/app_webview/Cookies"
    
    if [ -z "$cookie_path" ]; then
        mkdir -p "$folder/app_webview/Default"
        cookie_path="$folder/app_webview/Default/Cookies"
    fi

    # Force Stop
    am force-stop "$pkg" > /dev/null 2>&1

    # Eksekusi SQL (Dengan fix v3.9)
    "$SQLITE_BIN" "$cookie_path" "CREATE TABLE IF NOT EXISTS cookies (creation_utc INTEGER NOT NULL, host_key TEXT NOT NULL, name TEXT NOT NULL, value TEXT NOT NULL, path TEXT NOT NULL, expires_utc INTEGER NOT NULL, is_secure INTEGER NOT NULL, is_httponly INTEGER NOT NULL, last_access_utc INTEGER NOT NULL, has_expires INTEGER NOT NULL DEFAULT 1, is_persistent INTEGER NOT NULL DEFAULT 1, priority INTEGER NOT NULL DEFAULT 1, encrypted_value BLOB DEFAULT '', samesite INTEGER NOT NULL DEFAULT -1, source_scheme INTEGER NOT NULL DEFAULT 0, top_frame_site_key TEXT NOT NULL DEFAULT '', UNIQUE (host_key, name, path));"
    
    "$SQLITE_BIN" "$cookie_path" "DELETE FROM cookies WHERE name='.ROBLOSECURITY';"
    
    "$SQLITE_BIN" "$cookie_path" "INSERT OR REPLACE INTO cookies (creation_utc, host_key, name, value, path, expires_utc, is_secure, is_httponly, last_access_utc, has_expires, is_persistent, priority, samesite, source_scheme, top_frame_site_key) VALUES ((strftime('%s','now') * 1000000), '.roblox.com', '.ROBLOSECURITY', '$cookie', '/', 253402300799000000, 1, 1, (strftime('%s','now') * 1000000), 1, 1, 1, -1, 0, '');"

    if [ $? -eq 0 ]; then
        # Fix Permissions
        local app_uid=$(stat -c "%u:%g" "$folder")
        chown -R "$app_uid" "$folder/app_webview"
        chmod 660 "$cookie_path"
        echo "   ‚úÖ Sukses: $pkg"
    else
        echo "   ‚ùå Gagal: $pkg (SQL Error)"
    fi
}

# 4. Main Menu Loop
do_mass_inject() {
    echo "=========================================="
    echo "    ROBLOX MASS INJECTOR v4.0 (MULTI)     "
    echo "=========================================="
    prepare_sqlite
    
    # Deteksi Aplikasi
    pkgs=($(pm list packages | grep "com.roblox.clien" | cut -f 2 -d ":"))
    total_apps=${#pkgs[@]}
    
    if [ $total_apps -eq 0 ]; then
        echo "‚ùå Tidak ada aplikasi Roblox Clone."
        return
    fi

    echo "üì± Terdeteksi $total_apps aplikasi clone."
    echo "------------------------------------------"
    echo "üìù Masukkan Cookie satu per satu."
    echo "   Ketik 'done' (lalu Enter) jika sudah selesai."
    echo "------------------------------------------"

    # Input Loop
    i=0
    while true; do
        # Menampilkan prompt [1], [2], dst
        display_num=$((i + 1))
        echo -n "[$display_num] Cookie: "
        read -r input_cookie

        # Cek kondisi berhenti
        if [ "$input_cookie" = "done" ]; then
            break
        fi

        # Cek input kosong
        if [ -z "$input_cookie" ]; then
            echo "‚ö†Ô∏è  Input kosong, silakan ulangi atau ketik 'done'."
            continue
        fi

        # Simpan ke array (Android sh compatible)
        # Kita menggunakan variabel dinamis karena array bash murni kadang bermasalah di sh minimal
        eval "COOKIE_$i='$input_cookie'"
        
        i=$((i + 1))
        
        # Peringatan jika input melebihi jumlah aplikasi
        if [ $i -ge $total_apps ]; then
            echo "‚ö†Ô∏è  Jumlah cookie sudah memenuhi semua aplikasi ($total_apps)."
            echo "   Otomatis lanjut ke proses injeksi..."
            break
        fi
    done

    total_inputs=$i
    echo "------------------------------------------"
    echo "üöÄ Memulai Injeksi Sequential ($total_inputs Cookie)..."
    echo "------------------------------------------"

    # Injection Loop
    count=0
    while [ $count -lt $total_inputs ]; do
        # Ambil cookie dari variabel dinamis
        eval "current_cookie=\$COOKIE_$count"
        current_pkg="${pkgs[$count]}"

        echo "‚û°Ô∏è  Memproses [$((count+1))]: $current_pkg"
        inject_core "$current_pkg" "$current_cookie"
        
        count=$((count + 1))
    done

    echo "------------------------------------------"
    echo "‚ú® SELESAI! $count akun berhasil dipasang."
}

check_root
do_mass_inject
