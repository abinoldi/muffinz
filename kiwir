-- ===============================
-- ANTI-AFK SYSTEM
-- ===============================
pcall(function()
    local player = game:GetService("Players").LocalPlayer
    
    -- Disable all idle connections to prevent AFK kick
    for i, v in pairs(getconnections(player.Idled)) do
        if v.Disable then
            v:Disable()
            print("[Anti-AFK] Enabled")
        end
    end
end)

-- ======================================================
-- ULTRA EXTREME LOW GRAPHICS OPTIMIZER
-- ======================================================
task.spawn(function()
    print("=========================================")
    print("‚ö° ULTRA EXTREME LOW GRAPHICS ACTIVATING")
    print("=========================================")
    
    local RunService = game:GetService("RunService")
    local Lighting = game:GetService("Lighting")
    local Terrain = workspace:FindFirstChildOfClass("Terrain")
    local Workspace = game:GetService("Workspace")
    local Players = game:GetService("Players")
    local ReplicatedStorage = game:GetService("ReplicatedStorage")
    local UserSettings = UserSettings()
    local Settings = UserSettings:GetService("UserGameSettings")
    
    -- EXTREME FPS BOOST SETTINGS
    print("[GRAPHICS] Activating ULTRA EXTREME low graphics...")
    
    -- 1. KILL ALL VISUAL EFFECTS PERMANENTLY
    pcall(function()
        print("[GRAPHICS] Removing all visual effects...")
        for _, obj in pairs(workspace:GetDescendants()) do
            if obj:IsA("ParticleEmitter") or 
               obj:IsA("Trail") or 
               obj:IsA("Smoke") or 
               obj:IsA("Fire") or 
               obj:IsA("Explosion") or
               obj:IsA("Sparkles") or
               obj:IsA("Beam") or
               obj:IsA("Light") or
               obj:IsA("SurfaceLight") or
               obj:IsA("PointLight") or
               obj:IsA("SpotLight") then
                obj.Enabled = false
            end
        end
    end)
    
    -- 2. DESTROY ALL DECALS/TEXTURES
    pcall(function()
        print("[GRAPHICS] Destroying all decals/textures...")
        for _, obj in pairs(workspace:GetDescendants()) do
            if obj:IsA("Decal") or obj:IsA("Texture") then
                obj:Destroy()
            end
        end
    end)
    
    -- 3. EXTREME LIGHTING OPTIMIZATION
    pcall(function()
        print("[GRAPHICS] Applying extreme lighting optimizations...")
        
        -- Remove all lighting effects
        for _, effect in pairs(Lighting:GetChildren()) do
            if effect:IsA("PostEffect") or 
               effect:IsA("Sky") or 
               effect:IsA("Atmosphere") or
               effect:IsA("BloomEffect") or
               effect:IsA("BlurEffect") or
               effect:IsA("ColorCorrectionEffect") or
               effect:IsA("SunRaysEffect") or
               effect:IsA("DepthOfFieldEffect") then
                effect:Destroy()
            end
        end
        
        -- Minimal lighting settings
        Lighting.GlobalShadows = false
        Lighting.FogEnd = 9e9
        Lighting.FogStart = 9e9
        Lighting.Brightness = 0
        Lighting.ClockTime = 12
        Lighting.GeographicLatitude = 0
        Lighting.Ambient = Color3.new(0, 0, 0)
        Lighting.OutdoorAmbient = Color3.new(0, 0, 0)
        Lighting.ColorShift_Bottom = Color3.new(0, 0, 0)
        Lighting.ColorShift_Top = Color3.new(0, 0, 0)
        Lighting.ExposureCompensation = -1
        
        -- Destroy environmental effects
        Lighting.Blur = 0
        Lighting.BlurSize = 0
        
        -- Clear sky
        Lighting.Sky = nil
    end)
    
    -- 4. KILL TERRAIN AND WATER COMPLETELY
    if Terrain then
        pcall(function()
            print("[GRAPHICS] Disabling terrain and water...")
            Terrain.WaterWaveSize = 0
            Terrain.WaterWaveSpeed = 0
            Terrain.WaterReflectance = 0
            Terrain.WaterTransparency = 1
            Terrain.WaterColor = Color3.new(0, 0, 0)
            Terrain.Decoration = false
            Terrain.MaxExtents = Vector3.new(0, 0, 0)
        end)
    end
    
    -- 5. EXTREME RENDER QUALITY REDUCTION
    pcall(function()
        print("[GRAPHICS] Setting extreme low render quality...")
        
        -- Absolute minimum quality settings
        settings().Rendering.QualityLevel = Enum.QualityLevel.Level01
        settings().Rendering.MeshPartDetailLevel = Enum.MeshPartDetailLevel.Level01
        settings().Rendering.TextureQuality = Enum.TextureQuality.Low
        settings().Rendering.EagerBulkExecution = true
        
        -- Disable all graphics features
        settings().Rendering.EnableFRM = false
        settings().Rendering.RenderCSGTrianglesDebug = false
        settings().Rendering.ShowBoundingBoxes = false
    end)
    
    -- 6. DISABLE ALL SOUNDS
    pcall(function()
        print("[GRAPHICS] Disabling all sounds...")
        for _, sound in pairs(workspace:GetDescendants()) do
            if sound:IsA("Sound") then
                sound:Stop()
                sound.Volume = 0
            end
        end
    end)
    
    -- 7. REMOVE UNNECESSARY UI ELEMENTS
    pcall(function()
        print("[GRAPHICS] Cleaning up UI elements...")
        local CoreGui = game:GetService("CoreGui")
        
        -- Remove Roblox default GUIs
        for _, gui in pairs(CoreGui:GetChildren()) do
            if gui.Name == "RobloxGui" or gui.Name == "PlayerList" or gui.Name == "Chat" then
                gui.Enabled = false
            end
        end
    end)
    
    -- 8. OPTIMIZE PLAYER CHARACTERS
    pcall(function()
        print("[GRAPHICS] Optimizing player characters...")
        
        local function OptimizeCharacter(character)
            if character then
                for _, part in pairs(character:GetDescendants()) do
                    -- Remove unnecessary parts
                    if part:IsA("ShirtGraphic") or part:IsA("Shirt") or part:IsA("Pants") then
                        part:Destroy()
                    end
                    
                    -- Remove accessories
                    if part:IsA("Accessory") then
                        part:Destroy()
                    end
                    
                    -- Simplify parts
                    if part:IsA("BasePart") then
                        part.Material = Enum.Material.Plastic
                        part.Reflectance = 0
                        part.Transparency = 0
                    end
                end
            end
        end
        
        -- Optimize all players
        for _, player in pairs(Players:GetPlayers()) do
            if player.Character then
                OptimizeCharacter(player.Character)
            end
            player.CharacterAdded:Connect(OptimizeCharacter)
        end
    end)
    
    -- 9. REMOVE PHYSICS PARTICLES
    pcall(function()
        print("[GRAPHICS] Removing physics particles...")
        workspace.Gravity = 0
        
        -- Remove physics controllers
        for _, obj in pairs(workspace:GetDescendants()) do
            if obj:IsA("BodyVelocity") or 
               obj:IsA("BodyForce") or 
               obj:IsA("BodyThrust") or 
               obj:IsA("BodyAngularVelocity") or
               obj:IsA("RocketPropulsion") then
                obj:Destroy()
            end
        end
    end)
    
    -- 10. MINIMAL FPS SETTINGS
    pcall(function()
        print("[GRAPHICS] Setting FPS limits...")
        if setfpscap then 
            setfpscap(30) -- Ultra low FPS for maximum performance
        end
        
        -- Force low quality
        if Settings then
            Settings.SavedQualityLevel = Enum.SavedQualitySetting.QualityLevel1
            Settings.MasterVolume = 0
        end
    end)
    
    -- 11. AGGRESSIVE GARBAGE COLLECTION
    pcall(function()
        print("[GRAPHICS] Running aggressive garbage collection...")
        for i = 1, 5 do
            if collectgarbage then
                collectgarbage("collect")
                task.wait(0.1)
            end
        end
    end)
    
    -- 12. CONTINUOUS OPTIMIZATION LOOP
    task.spawn(function()
        while task.wait(5) do
            -- Keep removing new particles/effects
            pcall(function()
                for _, obj in pairs(workspace:GetDescendants()) do
                    if obj:IsA("ParticleEmitter") or obj:IsA("Trail") or obj:IsA("Smoke") then
                        obj.Enabled = false
                    end
                end
            end)
            
            -- Continuous garbage collection
            if collectgarbage then
                collectgarbage("step", 100)
            end
        end
    end)
    
    print("=========================================")
    print("‚úÖ ULTRA EXTREME LOW GRAPHICS ACTIVATED")
    print("‚úÖ FPS: MAXIMUM PERFORMANCE MODE")
    print("‚úÖ VRAM USAGE: MINIMAL")
    print("‚úÖ CPU USAGE: OPTIMIZED")
    print("=========================================")
end)

